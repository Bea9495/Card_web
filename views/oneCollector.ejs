<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cartones Mágicos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/oneCollector.css" />
    <script
      src="https://kit.fontawesome.com/9b2fedeb7f.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <header><%- include("./includes/navbar") %></header>
    <main>
      <section class="section1">
        <h2 class="text-center p-5 text-decoration-underline">Perfil</h2>
        <div class="container-fluid">
          <div class="row m-2">
            <% if(typeof finalResult != 'undefined'){ %>
            <div class="col-6 col-md-4 mx-auto text-center">
              <article>
                <h3>Nombre: <%= finalResult.collector_name %></h3>
                <p>Interés: <%= finalResult.interest_in %></p>
                <p>Email: <%= finalResult.email %></p>
                <p>Descripción: <%= finalResult.collection_description %></p>
                <p>Teléfono: <%= finalResult.phone %></p>
              </article>
            </div>
            <div class="col-12 col-md-4 d-flex justify-content-center">
              <figure>
                <img
                  src="/images/collector/<%= finalResult.collector_img %>"
                  alt="imagen coleccionista"
                  class="image-fluid"
                />
              </figure>
            </div>
            <div
              class="col-12 col-md-4 d-flex justify-content-center align-items-center"
            >
              <button
                onclick="window.location.href='/card/addCard/<%= finalResult.collector_id %>'"
                class="general-button m-3"
              >
                <i class="fa-solid fa-plus"></i>
                Añadir carta
              </button>
             
                <button
                onclick="window.location.href='/collector/editCollector/<%= finalResult.collector_id %>'"
                class="general-button m-2"
              >
                <i class="fa-solid fa-pen-to-square"></i>
                Editar información
              </button>
              <button
                onclick="window.location.href='/collector/deleteLogicCollector/<%= finalResult.collector_id %>'"
                class="general-button m-2"
              >
                <i class="fa-solid fa-circle-minus"></i>
                Eliminar usuario
              </button>

              
              
            </div>
            <% } else { %>
            <h2>No hay ningún resultado</h2>
            <% } %>
            <hr />
          </div>
        </div>
      </section>
      <section class="section2">
        <h3 class="text-center p-5">Cartas</h3>
        <div class="container-fluid">
          <div class="row">
            <% finalResult.items.forEach((elem) => { %>
            <div
              class="col-12 col-lg-6 d-flex flex-wrap justify-content-center"
            >
              <div class="card mb-3" style="width: 100%">
                <div class="row">
                  <div class="col-12 col-md-4 order-md-2 order-1">
                    <img
                      src="/images/card/<%= elem.img %>"
                      class="img-fluid rounded"
                      alt="imagen carta"
                    />
                  </div>
                  <div
                    class="col-12 col-md-8 d-flex align-items-center order-md-1 order-2"
                  >
                    <div class="card-body w-auto">
                      <h5 class="card-title"><%= elem.name %></h5>
                      <p class="card-text">
                        Descripción: <%= elem.description %>
                      </p>
                      <p class="card-text">
                        <small class="text-body-secondary"
                          >Año de adquisición: <%= elem.acquisition_year
                          %></small
                        >
                      </p>
                      <div
                        class="d-flex justify-content-center align-items-center"
                      >
                        <button
                          onclick="window.location.href='/card/editCard/<%= elem.item_id %>'"
                          class="general-button"
                        >
                          <i class="fa-solid fa-square-pen"></i>
                          Editar
                        </button>
                        <button
                          onclick="window.location.href='/card/deleteCard/<%= elem.item_id %>/<%= finalResult.collector_id %>'"
                          class="general-button"
                        >
                          <i class="fa-solid fa-square-minus"></i>
                          Borrado total
                        </button>
                        <button
                          onclick="window.location.href='/card/deleteLogicCard/<%= elem.item_id %>/<%= finalResult.collector_id %>'"
                          class="general-button"
                        >
                          <i class="fa-regular fa-square-minus"></i>
                          Borrado lógico
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </main>
    <%- include("./includes/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
